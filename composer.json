{
    "name": "bbc/bamboo2",
    "type": "library",
    "description": "PHP client library for iBL",
    "license": "proprietary",
    "require": {
        "guzzle/guzzle": "v3.9.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/iplayer/guzzle3"
        }
    ],
    "require-dev": {
        "ext-curl": "*",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "config": {
        "vendor-dir": "vendor",
        "autoloader-suffix": "Bamboo"
    },
    "autoload": {
        "psr-0": {
            "Bamboo": "src/",
            "Bamboo\\Tests": "tests/"
        }
    }
}
