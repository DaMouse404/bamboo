{
    "name": "bbc/bamboo2",
    "type": "library",
    "description": "PHP client library for iBL",
    "license": "proprietary",
    "require": {
        "guzzle/guzzle": "v3.8.1"
    },
    "require-dev": {
        "ext-curl": "*",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "config": {
        "vendor-dir": "vendor",
        "autoloader-suffix": "Bamboo"
    },
    "autoload": {
        "psr-0": {
            "Bamboo": "src/",
            "Bamboo\\Tests": "tests/"
        }
    }
}
